<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/actionbarColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:textColorLink">@color/colorWhite</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/actionbarColor</item>
        <item name="android:colorBackground">@color/actionbarColor</item>

        <!-- Status Bar Settings -->
        <item name="android:statusBarColor">@color/actionbarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Button Text Color -->
        <item name="android:buttonStyle">@style/WhiteButtonStyle</item>
        <item name="materialButtonStyle">@style/WhiteButtonStyle</item>

        <!-- Dialog Theme -->
        <item name="android:dialogTheme">@style/WhiteDialogTheme</item>
        <item name="alertDialogTheme">@style/WhiteDialogTheme</item>

        <!-- Toolbar and ActionBar -->
        <item name="toolbarStyle">@style/WhiteToolbarStyle</item>
        <item name="actionBarStyle">@style/WhiteActionBarStyle</item>
        <item name="popupMenuStyle">@style/WhitePopupMenu</item>
        <item name="android:popupMenuStyle">@style/WhitePopupMenu</item>
    </style>

    <!-- White Button Style -->
    <style name="WhiteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/colorWhite</item>
    </style>

    <!-- White Toolbar Style -->
    <style name="WhiteToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/actionbarColor</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="subtitleTextColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="popupTheme">@style/WhitePopupMenu</item>
    </style>

    <!-- White Action Bar Style -->
    <style name="WhiteActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/actionbarColor</item>
        <item name="titleTextStyle">@style/WhiteTitleText</item>
        <item name="subtitleTextStyle">@style/WhiteSubTitleText</item>
        <item name="popupTheme">@style/WhitePopupMenu</item>
    </style>

    <!-- White Title Text Style -->
    <style name="WhiteTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- White SubTitle Text Style -->
    <style name="WhiteSubTitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- White Popup Menu -->
    <style name="WhitePopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/actionbarColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:itemTextAppearance">@style/WhiteMenuTextAppearance</item>
    </style>

    <!-- White Menu Text Appearance -->
    <style name="WhiteMenuTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- White Dialog Theme -->
    <style name="WhiteDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/actionbarColor</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="buttonBarPositiveButtonStyle">@style/WhiteButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/WhiteButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/WhiteButtonStyle</item>
    </style>

    <!-- Full Screen Theme -->
    <style name="FullScreen.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>